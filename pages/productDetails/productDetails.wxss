/* pages/productDetails/productDetails.wxss */

.root-container {
  display: flex;
  flex-direction: column;
  align-self: flex-start;
  align-content: flex-start;
  width: 100%;
  height: 100%;
  /* align-items: flex-start; */
}

.product-image {
  /* display: inherit; */
  display: flex;
  flex-direction: row;
  width: 500rpx;
  height: 500rpx;
  /* margin: 20rpx; */
  
  align-self: center
}

.product-info {
  display: block;
  /* display: flex; */
  width: 80%;
  height: fit-content;
  flex-direction: column;
  align-self: left;
  margin-left: 60rpx;
  line-height: 35rpx;

  /* font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; */
  font-size: 40rpx;

  border-bottom: 2rpx solid black;
}

.product-brand {
  font-family: Cabin;
  font-size: 32rpx;
  font-weight: 500;
  text-transform: uppercase;
}

.product-name {
  font-family: Cairo;
  font-size: 38rpx;
  font-weight: 200;  
}

.product-price {
  font-family: Cambay;
  font-size: 32rpx;
}

.addToCart-button {
  position: fixed;
  bottom: 0;

  width: 100%;
  height: 130rpx;
  line-height: 130rpx;

  background-color: gainsboro;
  font-family: Cairo;
  text-align: center;
  text-transform: uppercase
}